{%- liquid
  assign file_extension = 'png'

  if scope
    assign scope = scope | prepend: '--'
  endif

  if type == 'swatch'
    # custom swatch colors
    assign custom_colors = settings.custom_swatch_colors | newline_to_br | split: '<br />'
    assign custom_color_key_map = ''
    assign custom_color_value_map = ''

    for color_value in custom_colors
      assign custom_color_key = color_value | split: ':' | first | strip
      assign custom_color_value = color_value | split: ':' | last | strip

      assign custom_color_key_map = custom_color_key_map | append: ',' | append: custom_color_key
      assign custom_color_value_map = custom_color_value_map | append: ',' | append: custom_color_value
    endfor

    assign custom_color_key_map = custom_color_key_map | remove_first: ',' | split: ','
    assign custom_color_value_map = custom_color_value_map | remove_first: ',' | split: ','
  endif
-%}

<li
  class="
    filter-item
    {% if type == 'chip' %} filter-item--chip{% endif %}
  "
>
  <label
    data-filter-item
    class="filter-item__content {% if filter_value.count == 0 and filter_value.active == false %}filter-item__content--disabled{% endif %}"
    for="filter--{{ filter_value.param_name | url_escape }}--{{ filter_value.label | url_escape }}{{ scope }}"
  >
    <input
      type="checkbox"
      name="{{ filter_value.param_name }}"
      value="{{ filter_value.value }}"
      class="filter-item__checkbox visually-hidden"
      data-filter-item-input
      data-filter="{{ filter_value.param_name }}={{ filter_value.value }}"
      data-value-escaped="{{ filter_value.value | url_escape }}"
      id="filter--{{ filter_value.param_name | url_escape }}--{{ filter_value.label | url_escape }}{{ scope }}"
      {% if filter_value.active -%}
        checked
      {% endif %}
      {%- if key != blank and val != blank -%}
        data-{{ key }}="{{ val | handle }}"
      {%- endif -%}
      {% if filter_value.count == 0 and filter_value.active == false %}
        disabled
      {% endif %}
    >

    <div class="filter-item__content-inner">
      {%- if type == 'swatch' -%}
        {%- liquid
          assign custom_swatch_image = filter_value.label | handle | append: '.' | append: file_extension

          if filter_value.display
            if filter_value.display.type == 'colors'
              assign angle = 0
              assign angle_increment = 360 | divided_by: filter_value.display.value.size

              capture conic_gradient
                for color in filter_value.display.value
                  echo '[[c]] [[a]]deg' | replace: '[[c]]', color | replace: '[[a]]', angle
                  assign angle = angle | plus: angle_increment
                  echo ' [[a]]deg' | replace: '[[a]]', angle

                  unless forloop.last
                    echo ', '
                  endunless
                endfor
              endcapture

              assign filter_swatch_style = 'background: conic-gradient([[cg]]);' | replace: '[[cg]]', conic_gradient
            else
              assign image_url = filter_value.display.value | image_url: width: 24
              assign filter_swatch_style = filter_swatch_style | append: ' background-image: url([[csi]]);' | replace: '[[csi]]', image_url
            endif
          else
            assign custom_swatch_image = filter_value.label | handle | append: '.png'

            if custom_color_key_map contains filter_value.label
              for color_name in custom_color_key_map
                if color_name == filter_value.label
                  assign filter_swatch_style = 'background-color: [[bc]];' | replace: '[[bc]]', custom_color_value_map[forloop.index0]
                endif
              endfor
            else
              assign color_value = filter_value.label | downcase | replace: ' ', ''
              assign filter_swatch_style = 'background-color: [[bc]];' | replace: '[[bc]]', color_value
            endif

            if images[custom_swatch_image] != blank
              assign image_url = custom_swatch_image | file_url
              assign filter_swatch_style = filter_swatch_style | append: ' background-image: url([[csi]]);' | replace: '[[csi]]', image_url
            endif
          endif
        -%}

        <div
          class="filter-item__swatch"
          data-shape="{{ settings.swatch_shape }}"
          style="{{ filter_swatch_style }}"
        ></div>
      {%- endif -%}

      {%- if type == 'checkbox' -%}
        <div class="filter-input__input">
          {% render 'icon' with icon: 'checkmark' %}
        </div>
      {%- endif -%}

      {%- if type == 'checkbox' or type == 'swatch' -%}
        {%- assign color_value_downcase = filter_value.label | downcase -%}
        {%- assign color_hex = "" -%}
        {%- if color_value_downcase contains "black" or color_value_downcase contains "שחור" -%}
          {%- assign color_hex = "#000000" -%}
        {%- elsif color_value_downcase contains "white" or color_value_downcase contains "לבן" -%}
          {%- assign color_hex = "#ffffff" -%}
        {%- elsif color_value_downcase contains "red" or color_value_downcase contains "אדום" -%}
          {%- assign color_hex = "#ff0000" -%}
        {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "deep" -%}
          {%- assign color_hex = "#191970" -%}  <!-- midnightblue -->
        {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "dark" -%}
          {%- assign color_hex = "#00008b" -%}  <!-- darkblue -->
        {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "light" -%}
          {%- assign color_hex = "#87cefa" -%}  <!-- lightskyblue -->
        {%- elsif color_value_downcase contains "blue" or color_value_downcase contains "כחול" -%}
          {%- assign color_hex = "#0000ff" -%}  <!-- blue -->
        {%- elsif color_value_downcase contains "green" and color_value_downcase contains "light" -%}
          {%- assign color_hex = "#90ee90" -%}
        {%- elsif color_value_downcase contains "green" and color_value_downcase contains "dark" -%}
          {%- assign color_hex = "#006400" -%}
        {%- elsif color_value_downcase contains "green" or color_value_downcase contains "ירוק" -%}
          {%- assign color_hex = "#008000" -%}
        {%- elsif color_value_downcase contains "gray" and color_value_downcase contains "dark" -%}
          {%- assign color_hex = "#a9a9a9" -%}
        {%- elsif color_value_downcase contains "gray" and color_value_downcase contains "light" -%}
          {%- assign color_hex = "#d3d3d3" -%}
        {%- elsif color_value_downcase contains "gray" or color_value_downcase contains "אפור" -%}
          {%- assign color_hex = "#808080" -%}
        {%- elsif color_value_downcase contains "nude" or color_value_downcase contains "ניוד" -%}
          {%- assign color_hex = "#e6be8a" -%}
        {%- elsif color_value_downcase contains "yellow" or color_value_downcase contains "צהוב" -%}
          {%- assign color_hex = "#ffff00" -%}
        {%- elsif color_value_downcase contains "orange" or color_value_downcase contains "כתום" -%}
          {%- assign color_hex = "#ffa500" -%}
        {%- elsif color_value_downcase contains "purple" or color_value_downcase contains "סגול" -%}
          {%- assign color_hex = "#800080" -%}
        {%- elsif color_value_downcase contains "pink" and color_value_downcase contains "light" -%}
          {%- assign color_hex = "#ffb6c1" -%}
        {%- elsif color_value_downcase contains "pink" or color_value_downcase contains "ורוד" -%}
          {%- assign color_hex = "#ffc0cb" -%}
        {%- elsif color_value_downcase contains "brown" and color_value_downcase contains "dark" -%}
          {%- assign color_hex = "#654321" -%}  <!-- darkbrown -->
        {%- elsif color_value_downcase contains "brown" and color_value_downcase contains "light" -%}
          {%- assign color_hex = "#deb887" -%}  <!-- burlywood -->
        {%- elsif color_value_downcase contains "brown" or color_value_downcase contains "חום" or color_value_downcase contains "מוקה" -%}
          {%- assign color_hex = "#a52a2a" -%}
        {%- elsif color_value_downcase contains "turquoise" or color_value_downcase contains "טורקיז" -%}
          {%- assign color_hex = "#40e0d0" -%}
        {%- endif -%}
        <div class="color-circle" style="background-color: {{ color_hex }}; width: 15px; height: 15px; border-radius: 50%; display: inline-block; margin-right: 5px; margin-left:5px"></div>
        <span class="filter-item__label">
          {{ filter_value.label }}
        </span>
        <span class="filter-item__count fs-body-75">
          {{- 'filters.item_count_html' | t: value: filter_value.count -}}
        </span>
      {%- endif -%}

      {%- if type == 'chip' -%}
        <div class="filter-item__chip">
          {{ filter_value.label }}
        </div>
      {%- endif -%}
    </div>
  </label>
</li>
