{%- liquid
  assign results_count = 0
  if results.products_count != blank
    assign results_count = results.products_count
  elsif results.results_count != blank
    assign results_count = results.results_count
  endif
-%}

{%- if results.filters != empty or show_sort -%}
  <form class="filter-drawer popover" data-filter-modal-wrapper data-filter-form data-filter-drawer>
    {%- if search.terms -%}
      <input
        type="hidden"
        name="q"
        id="SearchFilters--FilterDrawer"
        value="{{ search.terms | escape }}"
      >
    {%- endif -%}

    <div class="filter-drawer__wash" data-drawer-wash></div>

    {%- comment -%} Keep search term within form {%- endcomment -%}
    {%- if results.terms -%}
      <input type="hidden" name="q" value="{{ results.terms | escape }}">
      <input name="options[prefix]" type="hidden" value="last">
    {%- endif -%}

    {%- comment -%} Keep product type within form {%- endcomment -%}
    {%- if results.current_type -%}
      <input type="hidden" name="q" value="{{ results.current_type | escape }}">
    {%- endif -%}

    {%- comment -%} Keep product vendor within form {%- endcomment -%}
    {%- if results.current_vendor -%}
      <input type="hidden" name="q" value="{{ results.current_vendor | escape }}">
    {%- endif -%}

    {%- if results.filters != empty -%}
      {%- liquid
        assign filters_active = false
        assign active_filter_count = 0
        for filter in results.filters
          if filter.active_values.size > 0
            assign filters_active = true
          endif
          for active_value in filter.active_values
            assign active_filter_count = active_filter_count | plus: 1
          endfor
        endfor
      -%}

      <div
        class="
          filter-drawer__panel
          {% if filters_active %}filters-active{% endif %}
          animation
          animation--filter-drawer
        "
        data-filter-modal="__tags"
        aria-labelledby="modal-{{ 'filters.title' | t }}"
        aria-modal="true"
        aria-hidden="true"
      >
        <div class="filter-drawer__content" data-scroll-lock-ignore>
          <div class="filter-drawer__heading">
            <h2
              id="modal-{{ 'filters.title' | t }}"
              class="filter-drawer__title ff-heading fs-heading-4-base"
              data-filter-drawer-title
            >
              {{ 'filters.title' | t }}

              {%- if filters_active -%}
                <span class="filter-drawer__title-count ff-body fs-body-100">{{ active_filter_count }}</span>
              {%- endif -%}
            </h2>

            <button
              type="button"
              class="filter-drawer__close"
              aria-label="{{ 'general.accessibility.close_modal' | t }}"
              data-close-icon
            >
              {% render 'icon-button' with small: true, icon: 'close' %}
            </button>
          </div>

          {% for filter in results.filters %}
            <div class="filter-drawer-item">
               {%- assign color_value_downcase = filter.label | downcase -%}
  {%- assign color_hex = "" -%}

  {%- if color_value_downcase contains "black" or color_value_downcase contains "שחור" -%}
    {%- assign color_hex = "#000000" -%}
  {%- elsif color_value_downcase contains "white" or color_value_downcase contains "לבן" -%}
    {%- assign color_hex = "#ffffff" -%}
  {%- elsif color_value_downcase contains "red" or color_value_downcase contains "אדום" -%}
    {%- assign color_hex = "#ff0000" -%}
  {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "deep" -%}
    {%- assign color_hex = "#000080" -%}
  {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#00008b" -%}
  {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#add8e6" -%}
  {%- elsif color_value_downcase contains "blue" or color_value_downcase contains "כחול" -%}
    {%- assign color_hex = "#0000ff" -%}
  {%- elsif color_value_downcase contains "green" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#90ee90" -%}
  {%- elsif color_value_downcase contains "green" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#006400" -%}
  {%- elsif color_value_downcase contains "green" or color_value_downcase contains "ירוק" -%}
    {%- assign color_hex = "#008000" -%}
  {%- elsif color_value_downcase contains "gray" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#a9a9a9" -%}
  {%- elsif color_value_downcase contains "gray" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#d3d3d3" -%}
  {%- elsif color_value_downcase contains "gray" or color_value_downcase contains "אפור" -%}
    {%- assign color_hex = "#808080" -%}
  {%- elsif color_value_downcase contains "nude" or color_value_downcase contains "ניוד" -%}
    {%- assign color_hex = "#e6be8a" -%}
  {%- elsif color_value_downcase contains "yellow" or color_value_downcase contains "צהוב" -%}
    {%- assign color_hex = "#ffff00" -%}
  {%- elsif color_value_downcase contains "orange" or color_value_downcase contains "כתום" -%}
    {%- assign color_hex = "#ffa500" -%}
  {%- elsif color_value_downcase contains "purple" or color_value_downcase contains "סגול" -%}
    {%- assign color_hex = "#800080" -%}
  {%- elsif color_value_downcase contains "pink" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#ffb6c1" -%}
  {%- elsif color_value_downcase contains "pink" or color_value_downcase contains "ורוד" -%}
    {%- assign color_hex = "#ffc0cb" -%}
  {%- elsif color_value_downcase contains "brown" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#654321" -%}
  {%- elsif color_value_downcase contains "brown" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#cd853f" -%}
  {%- elsif color_value_downcase contains "brown" or color_value_downcase contains "חום" or color_value_downcase contains "מוקה" -%}
    {%- assign color_hex = "#a52a2a" -%}
  {%- elsif color_value_downcase contains "turquoise" or color_value_downcase contains "טורקיז" -%}
    {%- assign color_hex = "#40e0d0" -%}
  {%- endif -%}
              <div class="color-circle" style="background-color: {{ color_hex }};"></div>
              {% render 'filter-drawer-group',
                filter: filter,
                scope: 'drawer',
                collapse_filter_groups: collapse_filter_groups,
                show_swatch_filters: show_swatch_filters,
                swatch_options: swatch_options,
                show_chip_filters: show_chip_filters,
                chip_options: chip_options,
                chip_layout: chip_layout
              %}
            </div>
          {% endfor %}
        </div>

        <div class="filter-drawer__footer animation--filter-drawer-item">
          <div class="filter-drawer__footer-active-filters" data-scroll-lock-ignore>
            {%- render 'active-filters' with results: results, show_swatch_filters: show_swatch_filters -%}
          </div>

          <div class="filter-drawer__footer-buttons">
            <button
              type="button"
              class="filter-drawer__button-clear btn btn--text-link fs-body-75"
              data-button="clear-all"
            >
              {{ 'filters.clear_all' | t }}
            </button>

            <p class="filter-drawer__results-count fs-body-50 fc" data-results-count>
              {% render 'results-count' with results_count: results_count %}
            </p>

            <button type="button" class="filter-drawer__button-apply btn btn--primary" data-button="close">
              {{ 'filters.done' | t }}
            </button>
          </div>
        </div>
      </div>
    {%- endif -%}

    {%- if show_sort -%}
      <div
        class="
          filter-drawer__panel
          filter-drawer__panel--sort
          animation
          animation--filter-drawer
        "
        data-filter-modal="__sort"
        aria-labelledby="modal-{{ 'filters.sort_title' | t }}"
        aria-modal="true"
        aria-hidden="true"
      >
        <div class="filter-drawer__content" data-scroll-lock-ignore>
          <div class="filter-drawer__heading">
            <h2 id="modal-{{ 'filters.sort_title' | t }}" class="ff-heading fs-heading-4-base">
              {{ 'filters.sort_title' | t }}
            </h2>

            <button
              type="button"
              class="filter-drawer__close"
              aria-label="{{ 'general.accessibility.close_modal' | t }}"
              data-close-icon
            >
              {% render 'icon-button' with small: true, icon: 'close' %}
            </button>
          </div>

          <div class="filter-drawer__group animation--filter-drawer-item">
            <ul class="filter-drawer__list">
              {%- for option in results.sort_options -%}
                {%- assign is_active = false -%}
                {%- if option.value == results.sort_by -%}
                  {%- assign is_active = true -%}
                {%- endif -%}
                <li class="filter-item">
                   {%- assign color_value_downcase = option.name | downcase -%}
  {%- assign color_hex = "" -%}

  {%- if color_value_downcase contains "black" or color_value_downcase contains "שחור" -%}
    {%- assign color_hex = "#000000" -%}
  {%- elsif color_value_downcase contains "white" or color_value_downcase contains "לבן" -%}
    {%- assign color_hex = "#ffffff" -%}
  {%- elsif color_value_downcase contains "red" or color_value_downcase contains "אדום" -%}
    {%- assign color_hex = "#ff0000" -%}
  {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "deep" -%}
    {%- assign color_hex = "#000080" -%}
  {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#00008b" -%}
  {%- elsif color_value_downcase contains "blue" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#add8e6" -%}
  {%- elsif color_value_downcase contains "blue" or color_value_downcase contains "כחול" -%}
    {%- assign color_hex = "#0000ff" -%}
  {%- elsif color_value_downcase contains "green" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#90ee90" -%}
  {%- elsif color_value_downcase contains "green" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#006400" -%}
  {%- elsif color_value_downcase contains "green" or color_value_downcase contains "ירוק" -%}
    {%- assign color_hex = "#008000" -%}
  {%- elsif color_value_downcase contains "gray" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#a9a9a9" -%}
  {%- elsif color_value_downcase contains "gray" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#d3d3d3" -%}
  {%- elsif color_value_downcase contains "gray" or color_value_downcase contains "אפור" -%}
    {%- assign color_hex = "#808080" -%}
  {%- elsif color_value_downcase contains "nude" or color_value_downcase contains "ניוד" -%}
    {%- assign color_hex = "#e6be8a" -%}
  {%- elsif color_value_downcase contains "yellow" or color_value_downcase contains "צהוב" -%}
    {%- assign color_hex = "#ffff00" -%}
  {%- elsif color_value_downcase contains "orange" or color_value_downcase contains "כתום" -%}
    {%- assign color_hex = "#ffa500" -%}
  {%- elsif color_value_downcase contains "purple" or color_value_downcase contains "סגול" -%}
    {%- assign color_hex = "#800080" -%}
  {%- elsif color_value_downcase contains "pink" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#ffb6c1" -%}
  {%- elsif color_value_downcase contains "pink" or color_value_downcase contains "ורוד" -%}
    {%- assign color_hex = "#ffc0cb" -%}
  {%- elsif color_value_downcase contains "brown" and color_value_downcase contains "dark" -%}
    {%- assign color_hex = "#654321" -%}
  {%- elsif color_value_downcase contains "brown" and color_value_downcase contains "light" -%}
    {%- assign color_hex = "#cd853f" -%}
  {%- elsif color_value_downcase contains "brown" or color_value_downcase contains "חום" or color_value_downcase contains "מוקה" -%}
    {%- assign color_hex = "#a52a2a" -%}
  {%- elsif color_value_downcase contains "turquoise" or color_value_downcase contains "טורקיז" -%}
    {%- assign color_hex = "#40e0d0" -%}
  {%- endif -%}
        <div class="color-circle" style="background-color: {{ color_hex }}; width: 15px; height: 15px; border-radius: 50%; display: inline-block; margin-right: 5px;"></div>

                  <label data-sort for="filter-{{ option.name | handleize }}--mobile" class="filter-item__content">
                    <input
                      type="radio"
                      name="sort_by"
                      {% if is_active %}
                        checked="checked"
                      {% endif %}
                      value="{{ option.value }}"
                      data-value-escaped="{{ option.value | url_escape }}"
                      id="filter-{{ option.name | escape | handleize }}--mobile"
                      class="filter-item__radio visually-hidden"
                    >

                    <div class="filter-item__content-inner">
                      <div class="filter-input__input">
                        <div class="indicator"></div>
                      </div>
                      <span class="filter-item__label">{{ option.name }}</span>
                    </div>
                  </label>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        </div>
        <div class="filter-drawer__footer animation--filter-drawer-item">
          <div class="filter-drawer__footer-buttons">
            <button type="button" class="filter-drawer__button-apply btn btn--primary" data-button="close">
              {{ 'filters.done' | t }}
            </button>
          </div>
        </div>
      </div>
    {%- endif -%}
  </form>
{%- endif -%}
